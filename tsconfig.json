{
  "compilerOptions": {
    "target": "es2017", // 指定ECMAScript目标版本
    "module": "ES2022", // 指定模块化类型
    "declaration": true, // 生成 `.d.ts` 文件
    "outDir": "./", // 编译后生成的文件目录
    "strict": true, // 开启严格的类型检测
    "sourceMap": false,
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": ["DOM", "ES6"],
    "baseUrl": "./",
    "paths": {
      "https://cdn.jsdelivr.net/npm/@3r/tool@1.4.5/index.js": [
        "node_modules/@3r/tool" // Re-map to the type
      ],
      "https://gcore.jsdelivr.net/npm/@3r/tool@1.4.5/index.js": [
        "node_modules/@3r/tool" // Re-map to the type
      ],
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": []
}
